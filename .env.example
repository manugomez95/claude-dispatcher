# Linear API Key (from Linear Settings → API → Personal API keys)
LINEAR_API_KEY=lin_api_xxxxxxxxxxxx

# Slack User Token (from your Slack app's OAuth & Permissions page)
# IMPORTANT: Use a USER token (xoxp-), NOT a bot token (xoxb-)
# This makes messages appear from you, so Claude will respond
SLACK_USER_TOKEN=xoxp-xxxxxxxxxxxx

# Slack Channel ID (right-click channel → View channel details → scroll to bottom)
SLACK_CHANNEL_ID=C0XXXXXXXXX

# Claude Bot User ID (the user ID for @claude in your Slack workspace)
CLAUDE_USER_ID=U0XXXXXXXXX

# Optional: Filter to specific Linear project IDs (comma-separated)
# LINEAR_PROJECT_IDS=proj_abc123,proj_def456

# Optional: Filter to specific Linear team keys (comma-separated)
# LINEAR_TEAM_KEYS=ENG,PRODUCT
